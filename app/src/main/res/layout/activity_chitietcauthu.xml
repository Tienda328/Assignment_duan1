<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".chitiethlvActivity">
    <ImageView
        android:layout_width="384dp"
        android:layout_height="144dp"
        android:layout_gravity="center"
        android:background="#F1D85E"
        android:src="@drawable/timanh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:textSize="15sp"
            android:id="@+id/edtname"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:hint="name" />

        <EditText

            android:id="@+id/edtnamsinh"
            android:layout_width="131dp"
            android:layout_height="64dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:hint="năm sinh"
            android:text="năm sinh"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:textSize="15sp"
            android:id="@+id/edtquoctich"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:hint="Quốc tịch" />

        <EditText

            android:id="@+id/edtsoao"
            android:layout_width="131dp"
            android:layout_height="64dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:hint="so áo"

            android:textSize="15sp" />
    </LinearLayout>

    <EditText

        android:textSize="15sp"
        android:id="@+id/edtvitri"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="vị trí" />

    <EditText

        android:textSize="15sp"
        android:id="@+id/edtngayvaoclb"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ngày vào câu lạc bộ" />
    <EditText

        android:textSize="15sp"
        android:id="@+id/edtsobanghi"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Sô bàn ghi" />
    <EditText

        android:textSize="15sp"
        android:id="@+id/edttieusu"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Tiểu sử" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnluu"
            android:layout_width="131dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Lưu"
            android:background="#FC9A88"
            android:textColor="#ffff"/>
        <Button
            android:id="@+id/btnthoat"
            android:layout_width="131dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Thoát"
            android:background="#FC9A88"
            android:textColor="#ffff"/>
    </LinearLayout>
</LinearLayout>